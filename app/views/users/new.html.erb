<h2>New User</h2>

<% if @user.errors.any? %>
  <ul>
    <%= @user.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br><br>
  <%= f.submit 'Save' %>
<% end %>
<br>
<%= link_to "Cancel", users_path %>
